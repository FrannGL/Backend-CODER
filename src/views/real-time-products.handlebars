<div class="title">
  <img src="./images/logo.png" class="logo" alt="" />
  <h1 class="text-center">Lista de Productos en tiempo real</h1>
  <hr />
</div>
<div class="container mb-5">
  <div class="row">
    <div class="col g-0">
      <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button
              class="accordion-button"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseOne"
              aria-expanded="true"
              aria-controls="collapseOne"
            ><i class="bi bi-database-add me-2"></i>
              Agregar Producto
            </button>
          </h2>
          <div
            id="collapseOne"
            class="accordion-collapse collapse"
            data-bs-parent="#accordionExample"
          >
            <div class="accordion-body">
              <form id="addProductForm">
                <div class="row">
                  <div class="col-6">
                    <div class="form-floating mb-3">
                      <input
                        type="text"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-title"
                      />
                      <label for="floatingInput"><i
                          class="bi bi-pencil-square me-1"
                        ></i>Nombre</label>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-floating">
                      <input
                        type="text"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-description"
                      />
                      <label for="floatingPassword"><i
                          class="bi bi-file-bar-graph me-1"
                        ></i>Descripcion</label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    <div class="form-floating mb-3">
                      <input
                        type="number"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-price"
                      />
                      <label for="floatingInput"><i
                          class="bi bi-currency-dollar me-1"
                        ></i>Precio</label>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-floating">
                      <input
                        type="text"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-thumbnail"
                      />
                      <label for="floatingPassword"><i
                          class="bi bi-card-image me-1"
                        ></i>Imagen</label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    <div class="form-floating mb-3">
                      <input
                        type="number"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-code"
                      />
                      <label for="floatingInput"><i
                          class="bi bi-qr-code me-1"
                        ></i>Codigo</label>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-floating">
                      <input
                        type="number"
                        class="form-control border-0 border-bottom border-primary"
                        id="input-stock"
                      />
                      <label for="floatingPassword"><i
                          class="bi bi-list-ol me-1"
                        ></i>Stock</label>
                    </div>
                  </div>
                </div>
                <div class="btnAdd">
                  <button type="submit" class="btn btn-primary"><i
                      class="bi bi-send-plus-fill me-2"
                    ></i>Crear Producto</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div
      class="col g-0 d-flex flex-wrap justify-content-center gap-5"
      id="dinamic-list"
    >
      {{#each data}}
        <div class="card" style="width: 15rem; border: 1px solid black">
          <img src={{this.thumbnail}} class="card-img" alt="{{this.title}}" />
          <div class="card-body text-center">
            <h6 class="card-id">ID: {{this.id}}</h6>
            <div class="card-title">
              <h4>{{this.title}}</h4>
            </div>
            <div class="card-description">
              <p>{{this.description}}</p>
            </div>
            <div class="card-price">
              <p>$ {{this.price}}.-</p>
            </div>
            <div class="card-item-detail">
              <p class="code"><b>Code:</b> {{this.code}}</p>
              <p class="stock"><b>Stock:</b> {{this.stock}}</p>
            </div>
            <div class="btnContainer">
              <a
                href="#"
                class="btn btn-primary btn-sm btnEdit"
                data-id={{this.id}}
              ><i class="bi bi-pencil me-1"></i>Editar</a>
              <a
                href="#"
                class="btn btn-danger btn-sm ms-2 btnDelete"
                data-id={{this.id}}
              ><i class="bi bi-trash3 me-1"></i>Eliminar</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>